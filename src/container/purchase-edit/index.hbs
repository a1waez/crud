{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main class="main">
  {{#with data.purchase}}
  <form method="POST" action="/purchase-list" class="form-card">
    {{> heading title="Змінна данних"}}

    <div class="purchase-info">
      <p class="purchase-info__title">ID:</p>
      <span class="purchase-info__data">{{id}}</span>
    </div>


    {{>divider}}

    <div class="purchase-info__field2">
      <div class="field">
        <label for="{{firstname}}" value="{{firstname}}" class="field__label">Ім'я:</label>
        <input type="text" value="{{firstname}}" name="{{firstname}}" class="field__input">
      </div>
      <div class="field">
        <label for="{{lastname}}" value="{{lastname}}" class="field__label">Прізвище:</label>
        <input type="text" value="{{lastname}}" name="{{firstname}}" class="field__input">
      </div>
      <div class="field">
        <label for="{{phone}}" value="{{phone}}" class="field__label">Телефон:</label>
        <input type="text" value="{{phone}}" name="{{phone}}" class="field__input">
      </div>
      <div class="field">
        <label for="{{email}}" value="{{firstnemailame}}" class="field__label">Єлектронна пошта:</label>
        <input type="text" value="{{email}}" name="{{email}}" class="field__input">
      </div>


    </div>

    {{>button text="Змінити дані"}}

  </form>
  {{/with}}
</main>

